<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget_notice"
	android:focusable="true"
    android:layout_width="424px"
    android:layout_height="74px"
    android:orientation="horizontal"
    android:background="@drawable/widget_notice" >

	<ImageButton
		android:id="@+id/buttoncompose"
		android:src="@drawable/postbutton"
		android:layout_alignParentLeft="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:background="@null"
		android:layout_marginLeft="14dp"
		/>
		
	<TextView
        android:id="@+id/notice"
        android:layout_width="318dp" 
        android:layout_height="40dp"
        android:layout_marginLeft="74dp"
        android:text="01234567890 1234567890 123456789
0123456789 0123456789 0123456789
0123456789 0123456789 0123456789
        	"
        android:layout_marginTop="6dp"
		android:textColor="#ececec"
		android:textSize="16sp"
		android:gravity="top"
        />
        
     <TextView
        android:id="@+id/author"
        android:layout_below="@id/notice"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:text="macno"
		android:textSize="12sp"
		android:textColor="#ececec"
		android:gravity="bottom|left"
        />
        
     <TextView
        android:id="@+id/noticetime"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginRight="88dp"
        android:text="few seconds ago"
		android:layout_below="@id/notice"
		android:layout_alignParentRight="true"
		android:textColor="#ececec"
		android:textSize="12sp"
		android:gravity="right"
        />
        
	<ImageButton
		android:id="@+id/scrollup"
		android:src="@drawable/scrollup"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:layout_alignParentTop="true"
		android:layout_marginTop="10dp"
        android:layout_marginRight="18dp"
		/>
	
	<ImageButton
		android:id="@+id/scrolldown"
		android:src="@drawable/scrolldown"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@null"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="10dp"
        android:layout_marginRight="18dp"
		/>
		


</RelativeLayout>