<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget"
	android:focusable="true"
    android:layout_width="424px"
    android:layout_height="74px"
    android:orientation="horizontal"
    android:background="@drawable/m_widget_landscape"
    style="@style/WidgetBackgroundLandscape">

    <TextView
        android:id="@+id/message"
        android:layout_width="280px" 
        android:layout_height="36px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="74px"
        android:padding="10dip"
        android:gravity="left|center_vertical"
        android:ellipsize="marquee"
        android:text="Landscape"
        style="@style/Text.High"
        android:background="@drawable/w_textbubble"
        />
        
    <ImageView
    	android:id="@+id/wdgt_send"
    	android:src="@drawable/send"
    	android:layout_height="24px"
    	android:layout_width="24px"
    	android:layout_centerVertical="true"
    	android:layout_toRightOf="@id/message"
    	android:layout_marginLeft="15px"
    	/>

</RelativeLayout>