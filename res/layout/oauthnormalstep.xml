<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:fillViewport="true"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent">

	<LinearLayout
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

	<EditText android:id="@+id/edit_instance"
			android:layout_height="wrap_content"
			android:layout_marginRight="5dp"
			android:layout_width="fill_parent" android:singleLine="true"
			android:inputType="textCapSentences" />

		<Button android:layout_marginTop="10dp"
			android:id="@+id/button_test" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:text="@string/btn_test" />

	</LinearLayout>

</ScrollView>